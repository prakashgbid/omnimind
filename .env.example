# OmniMind Configuration Template
# Copy this to .env and customize

# Models (local - no API keys needed!)
PRIMARY_MODEL=llama3.2:3b
CONSENSUS_MODELS=llama3.2:3b,mixtral:8x7b,deepseek-coder:6.7b

# Storage Paths
CHROMADB_PATH=./data/chromadb
SQLITE_PATH=./data/sqlite/omnimind.db
GRAPH_PATH=./data/graphs/knowledge.gpickle

# Memory Settings
MEMORY_SEARCH_LIMIT=20
CONSENSUS_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000

# Backup Settings
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_PATH=./data/backups

# UI Settings
WEB_PORT=7860
CLI_HISTORY_FILE=~/.omnimind_history

# Performance
EMBEDDING_BATCH_SIZE=32
CACHE_SIZE_MB=100

# Cloud LLM APIs (Optional but recommended for best performance)
# Get these from:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
# Google: https://makersuite.google.com/app/apikey

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview  # or gpt-4, gpt-3.5-turbo, gpt-5 (when available)

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229  # or claude-3-sonnet, claude-3-haiku

GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro  # or gemini-ultra, gemini-1.5-pro

# Provider Settings
USE_LOCAL_MODELS=true  # Set to false to use only cloud models
PREFERRED_PROVIDERS=ollama,openai,anthropic  # Order of preference
CONSENSUS_PROVIDERS=openai,anthropic,google  # Providers for consensus
MAX_CONSENSUS_PROVIDERS=3  # Maximum providers to use for consensus

# Cost Management
MONTHLY_BUDGET_USD=100  # Optional spending limit
WARN_COST_PER_QUERY=1.0  # Warn if single query costs more than this
PREFER_CHEAP_MODELS=false  # Use cheaper models when possible